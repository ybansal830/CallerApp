<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_two">

    <View
        android:id="@+id/vOne"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@color/black_three"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivOne"
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:layout_marginStart="20dp"
        android:src="@drawable/threebar"
        app:layout_constraintBottom_toBottomOf="@+id/vOne"
        app:layout_constraintStart_toStartOf="@+id/vOne"
        app:layout_constraintTop_toTopOf="@+id/vOne" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Search Contacts"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/vOne"
        app:layout_constraintStart_toEndOf="@+id/ivOne"
        app:layout_constraintTop_toTopOf="@+id/vOne" />

    <ImageView
        android:layout_width="20sp"
        android:layout_height="20sp"
        android:layout_marginEnd="80dp"
        android:src="@drawable/threedots"
        app:layout_constraintBottom_toBottomOf="@+id/vOne"
        app:layout_constraintEnd_toEndOf="@+id/vOne"
        app:layout_constraintTop_toTopOf="@+id/vOne" />

    <ImageView
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/contact"
        app:layout_constraintBottom_toBottomOf="@+id/vOne"
        app:layout_constraintEnd_toEndOf="@+id/vOne"
        app:layout_constraintTop_toTopOf="@+id/vOne" />

    <androidx.recyclerview.widget.RecyclerView xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vOne"
        tools:context=".MainActivity" />

</androidx.constraintlayout.widget.ConstraintLayout>